{
    "name": "mbsoft31/laravel-semantic-scholar",
    "description": "A fluent, elegant, and modern wrapper for the Semantic Scholar API, built for Laravel",
    "keywords": [
        "Mbsoft",
        "laravel",
        "semantic-scholar",
        "api",
        "sdk",
        "research",
        "academic",
        "papers",
        "citations",
        "authors"
    ],
    "homepage": "https://github.com/mbsoft31/php-s2",
    "license": "MIT",
    "authors": [
        {
            "name": "Mouadh BEKHOUCHE",
            "email": "bekhouche.mouadh@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0||^11.0",
        "illuminate/http": "^10.0||^11.0",
        "illuminate/support": "^10.0||^11.0",
        "illuminate/cache": "^10.0||^11.0",
        "spatie/laravel-data": "^3.0||^4.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.0||^8.0",
        "orchestra/testbench": "^8.0||^9.0",
        "pestphp/pest": "^2.0||^3.0",
        "pestphp/pest-plugin-laravel": "^2.0||^3.0",
        "pestphp/pest-plugin-arch": "^2.0||^3.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "larastan/larastan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Mbsoft\\SemanticScholar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mbsoft\\SemanticScholar\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@composer run prepare",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mbsoft\\SemanticScholar\\SemanticScholarServiceProvider"
            ],
            "aliases": {
                "SemanticScholar": "Mbsoft\\SemanticScholar\\Facades\\SemanticScholar"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}